{% extends "base.jinja2" %}
{% block title %}Articles from TnL with tag: {{ tag }}{% endblock %}
{% block content %}

	<section id="one">
		<div class="container">
			<header class="blog_listing">
				<h2>Articles from TnL with tag: {{ tag }}</h2>
			</header>
			{% for post in posts %}
				<div class="tag_post">
					<h3 class="post_title"><a href="{{ post.filename }}.doz">{{ post.title }}</a></h3>
					<div class="posted_date">posted: {{ post.posted_date.strftime('%d, %b %Y at %I:%M %p') }}</div>
					{{ post.hook }}
				</div>
			{% endfor %}
			{% if total_pages > 1 %}
				<div id = 'page_numbers'>Page:
				{% if page_num > 1 %}
					<span class="pages"><a href="{{ tag_file }}{{ page_num - 1 }}.doz">&lt;</a></span>
				{% endif %}
					<span class="pages current_page">{{ page_num }}</span>
				{% if page_num < total_pages %}
					<span class="pages"><a href="{{ tag_file }}{{ page_num + 1 }}.doz">&gt;</a></span>
				{% endif %}
				</div>
			{% endif %}
		</div>
	</section>
{% endblock %}