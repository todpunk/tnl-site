{% extends "base.jinja2" %}
{% block title %} {{ Title }}{% endblock %}
{% block content %}
                            <section id="one">
                                <div class="container">
                                    <header class="major">
										<h2>{{ Title }}</h2>
                                    </header>
									<div class="post_author">Written by <a href="author_{{ Author.replace(' ', '_') }}1.html">{{ Author }}</a></div>
									<div class="posted_date">On: {{ PostedDate.strftime('%d, %b %Y at %I:%M %p') }}</div>
									<div class="tags">
										Tags: {% for tag in Tags %}<span class="tag"><a href="tag_{{ tag }}1.html">{{ tag }}</a></span>&nbsp;{% endfor %}
									</div>
									<div class="post_content">
									{{ Hook }}
									{{ content }}
									</div>
                                </div>
                            </section>
{% endblock %}